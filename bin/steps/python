#!/usr/bin/env bash

set +e
runtime-fixer runtime.txt
PYTHON_VERSION=$(cat runtime.txt)

# The location of the pre-compiled python binary.
VENDORED_PYTHON="${VENDOR_URL}/runtimes/$PYTHON_VERSION.tar.gz"

if [[ $PYTHON_VERSION =~ ^python-2 ]]; then
  if [[ "$PYTHON_VERSION" != "$LATEST_2" ]]; then
    puts-warn "The latest version of Python 2 is $LATEST_2 (you are using $PYTHON_VERSION, which is unsupported)."
    puts-warn "We recommend upgrading by specifying the latest version ($LATEST_2)."
    echo "       Learn More: https://doc.scalingo.com/languages/python/start#supported-versions"
  fi
else
  if [[ $PYTHON_VERSION =~ ^python-3.7 ]] && [[ "$PYTHON_VERSION" != "$LATEST_37" ]]; then
    puts-warn "The latest version of Python 3.7 is $LATEST_37 (you are using $PYTHON_VERSION, which is unsupported)."
    puts-warn "We recommend upgrading by specifying the latest version ($LATEST_37)."
    echo "       Learn More: https://doc.scalingo.com/languages/python/start#supported-versions"
  else
    if [[ "$PYTHON_VERSION" != "$LATEST_36" ]]; then
      puts-warn "The latest version of Python 3.6 is $LATEST_36 (you are using $PYTHON_VERSION, which is unsupported)."
      puts-warn "We recommend upgrading by specifying the latest version ($LATEST_36)."
      echo "       Learn More: https://doc.scalingo.com/languages/python/start#supported-versions"
    fi
  fi
fi

if [[ "$STACK" != "$CACHED_PYTHON_STACK" ]]; then
    puts-step "Stack has changed from $CACHED_PYTHON_STACK to $STACK, clearing cache"
    rm -fr .scalingo/python-stack .scalingo/python-version .scalingo/python .scalingo/vendor
fi

if [ -f .scalingo/python-version ]; then
  if [ ! "$(cat .scalingo/python-version)" = "$PYTHON_VERSION" ]; then
      puts-step "Found $(cat .scalingo/python-version), removing"
      rm -fr .scalingo/python
  else
    SKIP_INSTALL=1
  fi
fi

if [ ! "$SKIP_INSTALL" ]; then
    puts-step "Installing $PYTHON_VERSION"

    # Prepare destination directory.
    mkdir -p .scalingo/python

    if ! curl --location "${VENDORED_PYTHON}" -s | tar zxv -C .scalingo/python &> /dev/null; then
      puts-warn "Requested runtime ($PYTHON_VERSION) is not available for this stack ($STACK)."
      puts-warn "Aborting.  More info: https://doc.scalingo.com/languages/python/start"
      exit 1
    fi

  # Record for future reference.
  echo $PYTHON_VERSION > .scalingo/python-version
  echo $STACK > .scalingo/python-stack
  FRESH_PYTHON=true

  hash -r
fi

# If Pip isn't up to date:
if [ "$FRESH_PYTHON" ] || [[ ! $(pip --version) == *$PIP_UPDATE* ]]; then

  puts-step "Installing pip"

  # Remove old installations.
  rm -fr /app/.scalingo/python/lib/python*/site-packages/pip-*
  rm -fr /app/.scalingo/python/lib/python*/site-packages/setuptools-*

  /app/.scalingo/python/bin/python "$ROOT_DIR/vendor/get-pip.py" pip=="$PIP_UPDATE" &> /dev/null
  /app/.scalingo/python/bin/pip install "$ROOT_DIR/vendor/setuptools-39.0.1-py2.py3-none-any.whl" &> /dev/null

fi

set -e
hash -r
