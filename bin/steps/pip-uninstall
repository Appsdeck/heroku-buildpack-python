set +e
# Install dependencies with Pip.
bpwatch start pip_uninstall
if [[ -f .scalingo/python/requirements-declared.txt ]]; then

  cp .scalingo/python/requirements-declared.txt requirements-declared.txt

  pip-diff --stale requirements-declared.txt requirements.txt --exclude setuptools pip > .scalingo/python/requirements-stale.txt

  rm -fr requirements-declared.txt

  if [[ -s .scalingo/python/requirements-stale.txt ]]; then
    puts-step "Uninstalling stale dependencies"
    /app/.scalingo/python/bin/pip uninstall -r .scalingo/python/requirements-stale.txt -y --exists-action=w | cleanup | indent
  fi
fi
bpwatch stop pip_uninstall
set -e
